@model List<Info>
@{
    ViewBag.Title = "House Listings";
}

<h1>House Listings</h1>
<div class="row">
    <div class="col-sm-2">
        <div class="dropdown">
            <button class="dropbtn">County</button>
            <div class="dropdown-content">
                <a asp-controller="House" asp-action="List" asp-route-id="All"
                   class="list-group-item @(ViewBag.SelectedCategoryName == "All" ? "active" : "")">All</a>
                @foreach (Region r in ViewBag.Regions)
                {

                    <a asp-controller="House" asp-action="List" asp-route-id="@r.Name"
                       class="list-group-item
                             @(ViewBag.SelectedCategoryName == r.Name ? "active" : "")">
                        @r.Name
                    </a>

                }
            </div>
        </div>
    </div>

    <div class="col-sm-10">
        <table class="table table-bordered">
           
            <tbody>
                @foreach (var house in Model)
                {
                <tr>
                    <td>
                        <a asp-controller="house" asp-action="Details"
                           asp-route-id="@house.HouseId">
                            <img src="~/images/@house.CodeOut" alt="there should be a picture here" class="imagesSmall" />
                        </a>
                        <br><b>Square Feet: </b>@house.SqFt<br>
                        <b>Price: $</b>@house.Price
                    </td>
                    <td><b>@house.Address</b><br>
                    <b>Year Built:</b> @house.Year
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>

</div>